<html t:type="layout" title="View Person | sylvarbo"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
      xmlns:p="tapestry:parameter">

<div class="row">
    <div class="col-12">
        <h1>View Person</h1>
    </div>
</div>

 <t:form t:id="editForm">
<div class="row">
    <div class="col-12">
    <table border="1">
     <tr>
      <td>Primary identity</td>
      <td>${viewedObject.primaryIdentity.displayableName}</td>
     </tr>
     <tr>
      <td>All identities</td>
      <td>
       <table border="1">
        <t:loop source="viewedObject.identities" index="currentIdentityIndex">
         <tr>
          <td>${currentIdentity.displayableName}</td>
          <td>
           <t:if test="canDeleteIdentities">
            <t:actionLink t:id="deleteIdentity" context="currentIdentityIndex">Delete</t:actionLink>
            <p:else>&nbsp;</p:else>
           </t:if>
          </td>
         </tr>
        </t:loop>
       </table>
       <br/>
       <t:select t:id="style"/>
       <t:submit t:id="addIdentity" value="Add identity"/>
      </td>
     </tr>
     <tr>
      <td>Events</td>
      <td>... todo ...</td>
     </tr>
     <tr>
      <td>Parents</td>
      <td>... todo ...</td>
     </tr>
     <tr>
      <td>Relationships</td>
      <td>... todo ...</td>
     </tr>
    </table>

    </div>
</div>
 </t:form>

<t:actionLink t:id="return">Return</t:actionLink>

</html>
